<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/game_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:fontFamily="@font/sniglet"
        android:text="@string/game_over"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/game_over_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/sniglet"
        android:textSize="25sp" />

    <Button
        android:id="@+id/game_over_return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:fontFamily="@font/sniglet"
        android:onClick="onReturnClick"
        android:text="@string/return_to_menu"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/game_over_crying_emoji"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/game_over_return_button"
        android:layout_marginTop="45dp"
        android:rotation="-20"
        android:src="@mipmap/crying_emoji"
        android:contentDescription="@string/crying_emoji" />

    <ImageView
        android:id="@+id/game_over_confused_emoji"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/game_over_return_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:src="@mipmap/confused_emoji"
        android:contentDescription="@string/confused_emoji"/>
</RelativeLayout>